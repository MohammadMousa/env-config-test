		<dependency org="com.badlogicgames.gdx" name="gdx-backend-lwjgl" rev="${gdx.version}"  conf="default->default"/>
		<dependency org="com.badlogicgames.gdx" name="gdx-platform" rev="${gdx.version}" conf="default->default"><artifact name="gdx-platform" classifier="natives-desktop"/></dependency>
		<dependency org="com.badlogicgames.gdx" name="gdx-box2d-platform" rev="${gdx.version}" conf="default->default"><artifact name="gdx-box2d-platform" classifier="natives-desktop"/></dependency>
	</dependencies> 
       
